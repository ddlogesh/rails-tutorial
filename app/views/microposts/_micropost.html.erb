<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 65), micropost.user %>
  <h4 class="content"><%= micropost.user.name %></h4>
  <h5 class="content"><%= micropost.content %></h5>
  <%= image_tag micropost.picture.url if micropost.picture? %>
  <h6 class="user"><%= time_ago_in_words(micropost.created_at) %> ago
    <% if current_user?(micropost.user) %>
      | <%= link_to "Delete", micropost, method: :delete, data: { confirm: "Sure?" } %>
    <% end %>
  </h6>
  <br>
</li>